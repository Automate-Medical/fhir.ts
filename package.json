{
  "name": "@sero.run/sero",
  "version": "0.0.2",
  "description": "Sero is a modular TypeScript toolchain for FHIR (and friends) sponsored by Automate Medical Inc.",
  "main": "dist/example/full-server.js",
  "scripts": {
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "dev": "NODE_ENV=development nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "eslint . && tsc",
    "start": "node dist/example/index.js",
    "test": "jest --detectOpenHandles",
    "docs": "typedoc src/index.ts src/cds-hooks/index.ts src/http/index.ts src/rest/index.ts --readme ./README.md",
    "lint": "eslint . --fix"
  },
  "keywords": [
    "fhir",
    "hl7",
    "cds-hooks"
  ],
  "author": "Automate Medical Inc.",
  "license": "Apache 2.0",
  "dependencies": {
    "fastify": "^3.18.0"
  },
  "devDependencies": {
    "@types/fhir": "^0.0.32",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.17.1",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.4"
  }
}
